block content
    #header.navbar.navbar-inverse.navbar-fixed-top( role="navigation")
        .container-fluid
            .navbar-header
                button.navbar-toggle( type="button" data-toggle="collapse" data-target=".navbar-collapse")
                    span.sr-only Toggle navigation
                    each val in [1, 2, 3]
                        span.icon-bar
                a.navbar-brand( href="#") MMT Cloud
            .navbar-collapse.collapse
                ul.nav.navbar-nav.navbar-right
                    each val, index in pages
                        if( index === page_id )
                            li.active
                                a( href="/chart/#{index}" )= val.title
                        else
                            li
                                a( href="/chart/#{index}" )= val.title
    #toolbar.navbar-default
        .navbar-collapse.collapse
            .row
                .col-md-8: #toolbar-box
                .col-md-4: ul.nav.navbar-nav.navbar-right
                    li
                        button#addBtn.btn.btn-default.btn-block
                            span.glyphicon.glyphicon-plus
    #content
        block page
    
    footer.footer
        .container
            p.text-muted footer
        