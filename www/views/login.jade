extends layout

block content
    .container
        .row
            .col-md-4.col-md-offset-4
                img( src="/img/montimage.png" ).img-responsive
                .panel.panel-info
                    .panel-body
                        form( method="POST" )
                            .form-group
                                label( for="username" ) Username
                                input.form-control( required, type="text", id="username", name="username", placeholder="")
                            .form-group
                                label( for="password" ) Password
                                input.form-control( required, type="password", id="password", name="password", placeholder="")
                            .form-group
                                button.btn.btn-success.btn-block( type="submit" ) Login