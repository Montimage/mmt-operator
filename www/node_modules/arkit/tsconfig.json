{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2015",
    "lib": ["es2015"],
    "types": ["node", "jest"],
    "strictNullChecks": true,
    "outDir": "dist/",
    "declaration": true,
    "declarationMap": true
  },
  "include": [
    "./src/*"
  ],
  "exclude": [
    "./test/*",
    "./dist/*",
    "./node_modules/*"
  ]
}
